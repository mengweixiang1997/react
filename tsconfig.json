{
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "./dist", // 输出目录
      // "sourceMap": false, // 是否生成sourceMap [bug]
      "target": "esnext", // 编译目标
      "module": "ESNext", // 模块类型
      "newLine": "LF",
      "moduleResolution": "node",
      "allowJs": true, // 是否编辑js文件
      "strict": true, // 严格模式
      "noUnusedLocals": false, // 未使用变量报错
      "experimentalDecorators": true, // 启动装饰器
      "resolveJsonModule": true, // 加载json
      "esModuleInterop": true, 
      "removeComments": false, // 删除注释
      "isolatedModules": true,
      "declaration": false, // 生成定义文件
      "declarationMap": false, // 生成定义sourceMap
    //   "declarationDir": "./dist/types", // 定义文件输出目录


      "lib": ["esnext", "dom"],  // 导入库类型定义
      "types": ["node"] // 导入指定类型包
    },
    "include": [
      "src/*",  // 导入目录
      "**/*.ts",
    ]
}